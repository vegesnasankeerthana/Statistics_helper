generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Schema {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  fields    String   // JSON string of field definitions
  createdAt DateTime @default(now())
  entries   Entry[]
}

model Entry {
  id       Int    @id @default(autoincrement())
  schemaId Int
  data     String // JSON string of the actual data
  schema   Schema @relation(fields: [schemaId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
} 
